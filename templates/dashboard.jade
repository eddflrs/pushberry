extends layout

block styles
  link(rel="stylesheet", type="text/css", href="inner.css")

block indie
  header.navbar.navbar-default.navbar-fixed-top(role="banner")
    div.container
      div.navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".bs-navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Pushberry
      nav.collapse.navbar-collapse.bs-navbar-collapse(role="navigation")
        ul.nav.navbar-nav.pull-right
          li
            a(href="/logout") Sign out

block title
  title Your Dash

block content
  div.row
    h1.text-center Hey, welcome back
      span.blue-emphasis . 
  div.row
    h4.text-center Your GitHub Projects

  div.row(ng-controller="ProjectsCtrl")
  
    table(ng-init="fetchProjects()")
      tr
        th Repository
        th Sync Status
      tr(ng-repeat="project in projects")
        td 
          a(href="{{project.html_url}}", data-toggle="tooltip", title="{{project.description}}") {{project.name}}
        td 
          a.btn.btn-default.btn-xs Sync